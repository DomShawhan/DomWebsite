<%- include("../partials/header") %>

<div class="ui container">
    <div class=" ui stackable grid">
        <div class="row"></div>
            <div class="three wide column">
                <label>Sort By Type</label>
                <div class="ui middle aligned selection list">
                    <div class="item">
                        <a href="/kk/user/<%= user.slug %>" class="header">All</a>
                    </div>
                    <div class="item">
                        <a href="/kk/user/<%= user.slug %>/Appetizers" class="header">Appetizers</a>
                    </div>
                    <div class="item">
                        <a href="/kk/user/<%= user.slug %>/Bread" class="header">Bread</a>
                    </div>
                    <div class="item">
                        <a href="/kk/user/<%= user.slug %>/Main" class="header">Main</a>
                    </div>
                    <div class="item">
                        <a href="/kk/user/<%= user.slug %>/Dessert" class="header">Dessert</a>
                    </div>
                    <div class="item">
                        <a href="/kk/user/<%= user.slug %>/Icing" class="header">Icing</a>
                    </div>
                    <hr>
                    <% if(kind === "All") { %>
                        <div class="item">
                            <a href="/kk/user/<%= user.slug %>/all/gluten" class="header">Gluten-Free</a>
                        </div>
                        <div class="item">
                            <a href="/kk/user/<%= user.slug %>/all/dairy" class="header">Dairy-Free</a>
                        </div>
                        <div class="item">
                            <a href="/kk/user/<%= user.slug %>/all/vegan" class="header">Vegan</a>
                        </div>
                        <div class="item">
                            <a href="/kk/user/<%= user.slug %>/all/vegetarian" class="header">Vegetarian</a>
                        </div>
                    <% } else { %>
                        <div class="item">
                            <a href="/kk/user/<%= user.slug %>/<%= kind %>/gluten" class="header">Gluten-Free</a>
                        </div>
                        <div class="item">
                            <a href="/kk/user/<%= user.slug %>/<%= kind %>/dairy" class="header">Dairy-Free</a>
                        </div>
                        <div class="item">
                            <a href="/kk/user/<%= user.slug %>/<%= kind %>/vegan" class="header">Vegan</a>
                        </div>
                        <div class="item">
                            <a href="/kk/user/<%= user.slug %>/<%= kind %>/vegetarian" class="header">Vegetarian</a>
                        </div>
                    <% } %>
                    <hr>
                  </div>
            </div>
            <div class="thirteen wide column">
                <div class="ui <% color() %> segment container">
                    <div class="ui top <% color() %> attached header">
                        <h1><%= user.username %>'s Recipes - <%= kind %>
                            <a href="/kk/user/<%= user.slug %>/edit/settings" class="header h1a"><i class="edit outline icon"></i><i class="user outline icon"></i></a>
                        </h1>
                        <form action="/kk/recipes/<%= user.slug %>/search/" style="display: inline-block;" method="get">
                            <div class="ui large action input" class="get">
                                <input name="search" type="search" placeholder="Search My Recipes">
                                <button class="ui button">Search</button>
                            </div>                      
                        </form>
                        <div class="pull-right" style="display: inline-block;">
                            <select class="rec-select" id="recipe-select"> 
                                <option class="sel-item" id="20" value="20">20</option>
                                <option class="sel-item" id="40" value="40">40</option>
                                <option class="sel-item" id="60" value="60">60</option>
                            </select>
                            recipes per Page
                        </div>
                    </div>
                    <div class="ui <% color() %> attached segment">
                        <div class="start">
                            <% recipes.forEach(function(recipe){ %>
                                <div class="container">
                                    <h1 class="data"><%= recipe.title %>
                                        <% if(recipe.public === true) { %>
                                            <strong class="h1a pull-right"><i class="universal access icon"></i> Public</strong>
                                        <% } else { %>
                                            <strong class="h1a pull-right"><i class="user secret icon"></i>Private</strong>
                                        <% } %>
                                        <div>
                                            <a href="/kk/recipes/show/<%= recipe.slug %>" class="h1a">View Recipe</a>
                                        </div>
                                        <% if(recipe.description){ %>
                                        <div>
                                            <p class="h1a"><%= recipe.description.substring(0, 100) %>...</p>
                                        </div>
                                        <% } %>
                                    </h1>
                                    <hr>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
</div>

<div class="page-container">
    <div class="ui pagination menu">
        <% if (pages && pages > 0) { %>
            <% if (current == 1) { %>
            <a class="disabled item">First</a>
            <% } else { %>
            <a class="item" href="/kk/user/<%= user.slug %><%if(kind !== "All"){%>/sort/<%= kind %><% if(special) { %>/<%= special %><% } %><%}else if(kind === "All" && special.length>0){%>/sor/<%= special %><% } else if(perPage) {%>?number=<%= perPage %><% } %>">First</a>
            <% } %>

            <% if (current == 1) { %>
            <a class="disabled item">«</a>
            <% } else { %>
            <a class="item" href="/kk/user/<%= user.slug %><%if(kind !== "All"){%>/sort/<%= kind %><% if(special) { %>/<%= special %><% } %><%}else if(kind === "All" && special.length>0){%>/sor/<%= special %><% } %>?page=<%= Number(current) - 1 %><% if(perPage) {%>&number=<%= perPage %><% } %>">«</a>
            <% } %>

            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <div class="disabled item">...</div>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <a class="active item"><%= i %></a>
            <% } else { %>
            <a class="item" href="/kk/user/<%= user.slug %><%if(kind !== "All"){%>/sort/<%= kind %><% if(special) { %>/<%= special %><% } %><%}else if(kind === "All" && special.length>0){%>/sor/<%= special %><% } %>?page=<%= i %><% if(perPage) {%>&number=<%= perPage %><% } %>"><%= i %></a>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <div class="disabled item">...</div>
            <% } %>
            <% } %>

            <% if (current == pages) { %>
            <a class="disabled item">»</a>
            <% } else { %>
            <a class="item" href="/kk/user/<%= user.slug %><%if(kind !== "All"){%>/sort/<%= kind %><% if(special) { %>/<%= special %><% } %><%}else if(kind === "All" && special.length>0){%>/sor/<%= special %><% } %>?page=<%= Number(current) + 1 %><% if(perPage) {%>&number=<%= perPage %><% } %>">»</a>
            <% } %>

            <% if (current == pages) { %>
            <a class="disabled item">Last</a>
            <% } else { %>
            <a class="item" href="/kk/user/<%= user.slug %><%if(kind !== "All"){%>/sort/<%= kind %><% if(special) { %>/<%= special %><% } %><%}else if(kind === "All" && special.length>0){%>/sor/<%= special %><% } %>?page=<%= pages %><% if(perPage) {%>&number=<%= perPage %><% } %>">Last</a>
            <% } %>
        <% } %>
    </div>  
</div>

<script>
    let recselect = document.getElementById("recipe-select");
    let pp20 = document.getElementById("20");
    let pp40 = document.getElementById("40");
    let pp60 = document.getElementById("60");

    function getCookie(cName) {
        const name = cName + "=";
        const cDecoded = decodeURIComponent(document.cookie); //to be careful
        const cArr = cDecoded.split('; ');
        let res;
        cArr.forEach(val => {
            if (val.indexOf(name) === 0) res = val.substring(name.length);
        })
        return res
    }
    let numCookie = getCookie("number");

    if(!numCookie) {
        document.cookie = "number=20;path=/kk";
    } else {
        switch (numCookie){
            case "20": 
                recselect.selectedIndex = 0;
            break;
            case "40": 
                recselect.selectedIndex = 1;
            break;
            case "60": 
                recselect.selectedIndex = 2;
            break;
        };
    };

    recselect.addEventListener("change", (e)=> {
        document.cookie = "number=" + recselect.options[recselect.selectedIndex].value+";path=/kk";
        if(document.location.href.includes("number") === false) {
            if(document.location.href.includes("?")){
                document.location.href += ("&number=" + recselect.options[recselect.selectedIndex].value);
            } else {
                document.location.href += ("?number=" + recselect.options[recselect.selectedIndex].value);
            };
        } else {
            let doHref = document.location.href.lastIndexOf("number=");
            let docLocHref = document.location.href.slice(0, doHref);
            let docLocFHref = docLocHref + ("number=" + recselect.options[recselect.selectedIndex].value);
            document.location.href = docLocFHref;
        }
    });
</script>

