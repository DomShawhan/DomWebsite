<%- include("../partials/header") %>

<div class="ui container">
    <div class="thirteen wide column">
        <div class="ui <% color() %> segment container">
            <div class="ui top <% color() %> attached header">
                <h1>Recipes shared with <%= user.username %></h1>
                <div>
                    <span class="ui buttons">
                        <button name="down-order" class="ui <% color() %> icon button" id="down" disabled><i class="sort alphabet down icon"></i></button>
                        <div class="or"></div>
                        <button name="up-order" class="ui <% color() %> icon button" id="up"><i class="sort alphabet up icon"></i></button>
                        </span>
                </div>
            </div>
            <div class="ui <% color() %> attached segment">
                <div class="start">
                    <div class="container">
                        <% if (user.shared && user.shared.length > 0) { %>
                            <% user.shared.forEach(function(shared){ %>
                                <h1 class="data">
                                    <a href="/kk/recipes/show/<%= shared.recipeSlug %>" class="h1a"><%= shared.recipeTitle %></a>
                                </h1>
                                <hr>
                            <% }) %>
                        <% } %>
                        <% if (recipes.length > 0) { %>
                            <% recipes.forEach((recipe) => { %>
                                <h1 class="data">
                                    <a href="/kk/recipes/show/<%= recipe.slug %>" class="h1a"><%= recipe.title %> </a>
                                </h1>
                                <hr>
                            <% }) %> 
                        <% } %>
                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/kk/javascript/main.js"></script>

<% function color(){ %>
    <% if(currentUser){ %>
        <%= currentUser.color %>
    <% } else { %>
        blue
    <% } %>
<% } %>

<%- include("../partials/footer") %>