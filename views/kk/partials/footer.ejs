<style>
    .execute__popup,
    .execute__popup:link,
    .execute__popup:visited {
        position: fixed;
        display: block;
        background-color: rgb(170, 170, 170);
        color: rgb(255, 255, 255);
        border: 2px solid rgb(170, 170, 170);
        font-size: 2rem;
        line-height: 1;
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, 0.2);
        bottom: 1.3rem;
        right: 1.3rem;
        transition: all .5s;
    }

    .execute__popup:hover {
        transform: scale(1.5);
    }
</style>

<a href="#popup" class="execute__popup"><i class="cloud icon"></i></a>

<div class="popup" id="popup">
    <div class="popup__content">
        <a href="#" class="popup__close">&times;</a>
        <form action="/kk/err-report" class="ui form" method="POST">
            <div class="field">
                <label for="err-username" class="popup__label">Username</label>
                <input <% if(currentUser) { %>value="<%= currentUser.username%>" readonly="readonly"<% } %>required type="text" name="username" id="err-username" placeholder="Username" class="popup__input">
            </div>
            <div class="field">
                <label for="err-email" class="popup__label">Email</label>
                <input type="email" <% if(currentUser) { %>value="<%= currentUser.email%>" readonly="readonly"<% } %> required name="email" id="err-email" placeholder="email" class="popup__input">
            </div>
            <div class="field">
                <label for="err-message" class="popup__label">Message</label>
                <textarea name="message" id="err-message" cols="30" rows="10" class="popup__input"
                class="popup-input" required style="resize: none;"></textarea>
            </div>
            <div class="field" style="text-align: center;">
                <input type="submit" class="ui <% color() %> button" value="Submit">
            </div>
        </form>
    </div>
</div>
    
    <script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.glide/1.0.6/jquery.glide.min.js"></script>
</body>
</html>

<% function color(){ %>
    <% if(currentUser){ %>
        <%= currentUser.color %>
    <% } else { %>
        blue 
    <% } %>
<% } %>