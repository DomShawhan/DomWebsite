<%- include("./header") %>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Rank</th>
            <th scope="col">Team</th>
            <th scope="col">W-L-T</th>
            <th scope="col">%</th>
            <th scope="col">Total Points</th>
            <th scope="col">PPG</th>
            <th scope="col">Min</th>
            <th scope="col">Max</th>
            <th scope="col">Std Dev</th>
            <th scope="col">Adjusted Average</th>
        </tr>
    </thead>
    <tbody>
        <% data.forEach(team=> { %>
            <tr>
                <td class="rank">
                    <%= team.rank != 0 ? team.rank : '' %>
                </td>
                <td scope="row">
                    <% if(team.logo_url.length> 0) { %>
                        <img height="25px" width="25px" src="<%= team.logo_url %>">
                    <% } %>
                    <%= team.name %>
                    <% if(team.rank == 1) { %>
                        <i class="bi bi-trophy-fill first-place"></i>
                    <% } else if(team.rank == 2) { %>
                        <i class="bi bi-trophy-fill second-place"></i>
                    <% } if(team.rank == 3) { %>
                        <i class="bi bi-trophy-fill third-place"></i>
                    <% } %>
                </td>
                <td class="record">
                    <%= team.wins %>-<%= team.losses %>-<%= team.ties %>
                </td>
                <td class="winpercent">
                    <%= (team.wins / (team.losses + team.wins)).toFixed(3) %>
                </td>
                <td class="total">
                    <%= team.seasonTotal.toFixed(2) %>
                </td>
                <td class="avg">
                    <%= team.avg.toFixed(2) %>
                </td>
                <td class="min">
                    <%= team.min.toFixed(2) %>
                </td>
                <td class="max">
                    <%= team.max.toFixed(2) %>
                </td>
                <td class="stddev">
                    <%= team.stddev.toFixed(2) %>
                </td>
                <td class="adjavg">
                    <%= team.avgMinusTopAndBottom25Percent.toFixed(2) %>
                </td>
            </tr>
            <% }); %>
    </tbody>
</table>
<%- include("./footer") %>